<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:background="@color/azulprofundo"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:text="Registro de usuario"
        android:textColor="@color/colorblanco"
        android:textSize="25dp"
        android:gravity="center"


        />

    <EditText
        android:id="@+id/id_correo_main2"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="121dp"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/colorblanco"
        android:textColor="@color/colorblanco"/>


    <EditText
        android:id="@+id/id_usuario_main2"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorblanco"
        android:textColor="@color/colorblanco"/>

    <EditText
        android:id="@+id/id_clave_main2"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="282dp"
        android:ems="10"
        android:hint="Clave"
        android:inputType="textPassword"
        android:textColorHint="@color/colorblanco"
        android:textColor="@color/colorblanco"/>

    <EditText
        android:id="@+id/id_confirmar_clave"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="360dp"
        android:ems="10"
        android:hint="Confirmar Clave"
        android:inputType="textPassword"
        android:textColorHint="@color/colorblanco"
        android:textColor="@color/colorblanco"/>

    <Button
        android:id="@+id/id_btn_cancelar"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="54dp"
        android:background="@drawable/recursobtnenviar"
        android:onClick="metodo_cancelar"
        android:text="cancelar"
        android:textColor="@color/colorblanco" />

    <Button
        android:id="@+id/id_btn_confirmarRegistro"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="219dp"
        android:layout_marginLeft="219dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/recursobtnenviar"
        android:onClick="metodo_registrar"
        android:text="crear Cuenta"

        android:textColor="@color/colorblanco" />


</RelativeLayout>